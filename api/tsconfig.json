{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es2017",
			"esnext.asynciterable"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"outDir": "./build",
		"allowJs": true,
		"noEmit": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}
